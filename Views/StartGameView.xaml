<Page x:Class="BattleshipAudioGame.Views.StartGameView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BattleshipAudioGame.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartGameView">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Bem-vindo ao Batalha Naval!"
                   FontSize="24"
                   Margin="0,0,0,20"
                   TextAlignment="Center" />

            <Button x:Name="BtnPlayGame"
                Content="Jogar"
                Margin="5"
                Padding="10"
                FontSize="16" />

            <Button x:Name="BtnTutorial"
                Content="Ouvir Tutorial"
                Margin="5"
                Padding="10"
                FontSize="16" />

            <Button x:Name="BtnExit"
                Content="Sair"
                Margin="5"
                Padding="10"
                FontSize="16" />
        </StackPanel>
    </Grid>
</Page>
