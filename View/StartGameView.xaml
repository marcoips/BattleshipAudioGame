<UserControl x:Class="BattleshipAudioGame.View.StartGameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:BattleshipAudioGame.ViewModel">
    
    
        <StackPanel HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <!-- estilos aplicados só dentro deste StackPanel -->
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width"  Value="140"/>
                    <Setter Property="Margin" Value="0,5"/>
                    <!-- “5” de cada lado = Spacing 10 total -->
                </Style>
            </StackPanel.Resources>

            <TextBlock Text="Bem‑vindo ao Battleship!"
               FontSize="24"
               TextAlignment="Center"
               Margin="0,0,0,10"/>

            <Button Content="Jogar"    Command="{Binding PlayCommand}" />
            <Button Content="Tutorial" Command="{Binding TutorialCommand}" />
            <Button Content="Sair"     Command="{Binding ExitCommand}" />

          
    </StackPanel>
    
</UserControl>
