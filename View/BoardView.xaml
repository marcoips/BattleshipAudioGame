<UserControl x:Class="BattleshipAudioGame.View.BoardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattleshipAudioGame.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <!-- Linha de título (binding opcional) -->
        <TextBlock Text="{Binding BoardTitle}"
                 FontSize="20" FontWeight="Bold"
                 HorizontalAlignment="Center" />

        <!-- Grelha 10×10  (row 1 col 0 é label; aqui simplificamos) -->
        <ItemsControl ItemsSource="{Binding Cells}" Margin="0,40,0,0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="10" Columns="10"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray" BorderThickness="0.5"
                          Background="{Binding Background}">
                        <TextBlock Text="{Binding Content}"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

    </Grid>
</UserControl>
