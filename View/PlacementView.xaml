<UserControl x:Class="BattleshipAudioGame.View.PlacementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:BattleshipAudioGame.View"
             x:Name="PlacementRoot">

    <Grid Margin="20">

        <!--  Col.0  painel lateral  -->
        <StackPanel Width="200" Margin="0,0,20,0">
            <TextBlock Text="A posicionar:" FontWeight="Bold"/>
            <TextBlock Text="{Binding NomeNavioAtual}" FontSize="18" Margin="0,4"/>

            <TextBlock Text="Orientação actual:" Margin="0,12,0,0"/>
            <TextBlock Text="{Binding OrientacaoTexto}" FontSize="16"/>

            <Button Content="Mudar orientação"
                    Command="{Binding AlterarOrientacaoCommand}"
                    Margin="0,12,0,0"/>

            <Button Content="Continuar"
                    Command="{Binding ContinueCommand}"
                    IsEnabled="{Binding PodeContinuar}"
                    Margin="0,40,0,0"/>
        </StackPanel>

        <!--  Col.1  tabuleiros  -->
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <views:BoardView DataContext="{Binding PlayerBoard}"
                              PlaceCommand="{Binding DataContext.ColocarNavioCommand,
                                        ElementName=PlacementRoot}"
                             Grid.Column="0"/>
            
            <views:BoardView DataContext="{Binding CpuBoard}"  
                             Grid.Column="2"/>
        </Grid>

    </Grid>

</UserControl>