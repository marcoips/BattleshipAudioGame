<UserControl x:Class="BattleshipAudioGame.View.PlacementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:BattleshipAudioGame.View">

    <!-- margem exterior opcional -->
    <Grid Margin="20">

        <!-- layout: 2 colunas para os tabuleiros + 1 “espaço” no meio -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>
            <!-- espaçamento -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 2 linhas: tabuleiros em cima, botão em baixo -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tabuleiro do Jogador -->
        <views:BoardView DataContext="{Binding PlayerBoard}"
                         Grid.Row="0" Grid.Column="0"/>

        <!-- Tabuleiro da CPU -->
        <views:BoardView DataContext="{Binding CpuBoard}"
                         Grid.Row="0" Grid.Column="2"/>

        <!-- Botão Continuar -->
        <Button Content="Continuar"
                Width="160" Height="40"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                Command="{Binding ContinueCommand}"
                Grid.Row="1" Grid.ColumnSpan="3"/>

    </Grid>
</UserControl>