<Application x:Class="BattleshipAudioGame.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:BattleshipAudioGame.ViewModel"
             xmlns:views="clr-namespace:BattleshipAudioGame.View"
             StartupUri="View/MainWindow.xaml">

    <Application.Resources>
        
        <DataTemplate DataType="{x:Type vm:StartGameViewModel}">
            <views:StartGameView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:PlacementViewModel}">
            <views:PlacementView/>
        </DataTemplate>

    </Application.Resources>
</Application>