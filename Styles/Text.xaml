<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Double x:Key="FontSizeSmall">14</sys:Double>

    <sys:Double x:Key="FontSizeRegular">18</sys:Double>

    <sys:Double x:Key="FontSizeLarge">24</sys:Double>

    <sys:Double x:Key="FontSizeXLarge">34</sys:Double>

    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Foreground" Value="{StaticResource DarkGreenBrush}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeRegular}" />
    </Style>
    <Style TargetType="{x:Type TextBlock}" x:Key="RegularText">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeRegular}" />
    </Style>

    <Style TargetType="{x:Type TextBlock}" x:Key="LargeText" BasedOn="{StaticResource RegularText}">
        <Setter Property="FontSize" Value="{StaticResource FontSizeLarge}" />
    </Style>

    <Style TargetType="{x:Type TextBlock}" x:Key="LargeText" BasedOn="{StaticResource RegularText}">
        <Setter Property="FontSize" Value="{StaticResource FontSizeXLarge}" />
    </Style>


</ResourceDictionary>