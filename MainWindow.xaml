<Window x:Class="BattleshipAudioGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleshipAudioGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Name="MainContent">
        <TextBlock Text="Welcome to the Battleship Audio Game!" 
           HorizontalAlignment="Center" VerticalAlignment="Center" 
           FontSize="20" />
        <Button Content="Start" HorizontalAlignment="Center" Margin="0,247,0,0" VerticalAlignment="Top" Click="Button_Click" Height="54" Width="96"/>
        <Label Content="BattleShip - AudioGame" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" Foreground="Black" Background="White" Padding="10" BorderBrush="Black" BorderThickness="2" Margin="0,26,0,0" />

    </Grid>
</Window>
